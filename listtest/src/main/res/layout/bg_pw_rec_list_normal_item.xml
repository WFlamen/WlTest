<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_item_info"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:gravity="center_vertical"
    android:background="@color/gray"
    android:orientation="horizontal" >


    <ImageView android:id="@+id/app_info_icon"
        android:layout_width="52dip"
        android:layout_height="52dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="-78dip"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:id="@+id/app_info_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="85dip"
        android:layout_marginLeft="78dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:orientation="vertical" >

        <TextView android:id="@+id/app_info_name"
            android:layout_height="35dip"
            android:layout_width="match_parent"
            android:gravity="bottom|left"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16dip"
            android:text="@string/dafult_app_name"/>


        <TextView android:id="@+id/app_info_intro"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/dark_gray"
            android:textSize="12dip"
            android:text="@string/dafult_app_bref"/>

    </LinearLayout>

    <Button android:id="@+id/app_info_buttom"
        android:layout_width="80dip"
        android:layout_height="30dip"
        android:background="@drawable/bg_pw_normal_item_btn"
        android:layout_marginLeft="-85dip"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textSize="14dip"
        android:text="@string/download"/>


</LinearLayout>
